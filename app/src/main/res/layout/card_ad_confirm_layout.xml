<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="3dp"
    android:paddingBottom="20dp"
    android:background="#EBEBEB"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/sendConfirmCloseBtn"
            android:layout_width="wrap_content"
            android:contentDescription="TODO"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_gravity="end"
            android:background="@mipmap/icon_card_bottom_sheet_close" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="@drawable/shape_gradient_orange_bg">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/app_color_white"
                    tools:text="阳澄湖牌大闸蟹礼券8只装 1.5kg "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/app_color_white"
                    tools:text="60 BU/张"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/icon_card_bottom_sheet_bg"/>
                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/icon_circle_right_top"/>
                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/icon_circle_left_top"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="@color/app_color_white">
                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentTop="true"
                    android:background="@mipmap/icon_circle_right_bottom"/>
                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/icon_circle_left_bottom"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/body_light_black_txt"
                    tools:text="资产ID：YCH-1033"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="15dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="16sp"
                        android:textColor="@color/body_light_black_txt"
                        tools:text="买入数量 ： 2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/app_color_green"
                        android:text="-"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        tools:text="2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/app_color_green"
                        android:text="+"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layerType="software"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dash_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="12.5dp"
                android:paddingBottom="12.5dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:background="@color/app_color_white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/body_light_black_txt"
                    android:text="总共费用 "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textColor="@color/title_deep_black_txt"
                    tools:text="120BU"/>
            </LinearLayout>
        </LinearLayout>
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/immediatelyBackupBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bp_btn_hight"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/backup_immediately_txt"
            app:qmui_borderColor="@color/app_color_green"
            app:qmui_backgroundColor="@color/app_color_green"
            app:qmui_radius="5dp"
            android:textColor="@color/app_color_font"
            android:textSize="@dimen/bp_btn_text_size"/>
    </LinearLayout>


</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>