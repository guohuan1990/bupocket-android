<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/assetIconBgIv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/icon_token_bg_list"/>

            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:layout_centerInParent="true"
                android:id="@+id/assetIconIv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:qmui_border_width="0dp"
                app:qmui_is_circle="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/assetCodeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/amountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/assetAmountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="=ï¿¥ 100.00"
                android:textColor="@color/asset_price_txt_color"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
