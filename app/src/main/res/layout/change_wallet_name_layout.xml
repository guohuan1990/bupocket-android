<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_corner"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="22.5dp"
            android:layout_marginLeft="22.5dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="@string/change_wallet_name_title"
                android:textColor="@color/send_confirm_title_color"
                android:textSize="27sp" />

            <EditText
                android:id="@+id/walletNewNameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="@drawable/edit_border_bg_white"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:textSize="14sp" />

            <View
                android:layout_marginTop="26dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/app_txt_color_gray_3"/>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="25dp">
                
                <TextView
                    android:id="@+id/changeNameCancel"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/app_txt_color_gray"
                    android:text="@string/common_dialog_cancel"/>

                <View
                    android:layout_gravity="center"
                    android:layout_width="1.5dp"
                    android:layout_height="18.5dp"
                    android:background="@color/app_txt_color_gray_3"/>

                <TextView
                    android:id="@+id/changeNameConfirm"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/app_color_main"
                    android:clickable="false"
                    android:enabled="false"
                    android:text="@string/common_dialog_confirm"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>